<aura:component controller="CarTypeSearch" extends="c:Base" implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >
    <aura:attribute name="ButtonLabel" type="String" default="Search"/> 
    <aura:attribute name="newLabel" type="String" default="New Button"  /> 
    <aura:attribute name="showNew" type="Boolean" default="false" />
 
     <aura:attribute name="carTypes" type="Car_Types__c" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
   <aura:registerEvent name="searchFormSubmit" type="c:SearchFormSubmitEvent"/>
    <lightning:layout horizontalAlign="center" >
                <lightning:layoutItem padding="around-medium">
                      <lightning:select name="selectItem" aura:id="carTypeList" label="All Types" variant="label-hidden" value="" >
                          <option value="" text="All Types" />
                          <aura:iteration items="{!v.carTypes}" var="carType">
                                  <option value="{!carType.Id}" text="{!carType.Name}"/><br/>
                          </aura:iteration>

                     </lightning:select>                
            </lightning:layoutItem>
        
        <lightning:layoutitem padding="around-medium">
            <lightning:button variant="Brand" label="{!v.ButtonLabel}" onclick="{!c.onSearchClick}"/> 
 <aura:if isTrue="{!v.showNew}">
                <lightning:button variant="Neutral" label="{!v.newLabel}" onclick="{!c.createNewRecord}"/>
               <!-- <aura:set attribute="else">
                    New Button cannot be added here
                </aura:set> -->
            </aura:if>
        </lightning:layoutitem>
    </lightning:layout>`
</aura:component>